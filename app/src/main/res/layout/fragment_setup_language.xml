<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/setup_language_selection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_selection_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/setup_language_selection_value"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/setup_language_selection_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/setup_language_selection_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <ImageButton
        android:id="@+id/setup_language_slovak_button"
        android:src="@drawable/flag_sk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setup_language_czech_button"
        android:layout_marginBottom="30dp"/>

    <ImageButton
        android:id="@+id/setup_language_czech_button"
        android:src="@drawable/flag_cs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>